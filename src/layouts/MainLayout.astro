---
// Style import
import '@styles/index.scss';

// Component imports
import Head from '@components/Head.astro';
import Header from '@components/Navbar.astro';
import Footer from '@components/Footer.astro';

// Variable handling
import { SITE_TITLE } from "@data/site-data";

export interface Props {
    title?:         string;
    description?:   string;
}

const { title = SITE_TITLE, description = 'Change me' } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">

    <Head title={ title } description={ description }/>
    
    <body>
        <!-- * Accessibility anchor to jump to main content -->
        <!-- <a href="#content">main</a> -->

        <Header />
        <main data-pagefind-body>
            <slot />
        </main>
        <Footer />
	</body>
</html>